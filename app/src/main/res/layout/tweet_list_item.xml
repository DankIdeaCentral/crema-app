<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <RelativeLayout android:layout_height="25dp"
        android:layout_width="match_parent"
        android:id = "@+id/tweet_header">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_margin = "5dp"
            android:id = "@+id/tweet_image"
            android:layout_alignParentTop="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:id = "@+id/tweet_handle"
            android:layout_height="wrap_content"
            android:text = "Tweeter"
            android:layout_alignLeft="@id/tweet_image"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id = "@+id/tweet_view_content"
        android:layout_alignBottom = "@+id/tweet_header"
        android:text = "Tweet Body"
        />

</RelativeLayout>
